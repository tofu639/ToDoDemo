# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/nodejs_api_demo?schema=public"

# Docker Database Configuration (used by docker-compose.yml)
POSTGRES_DB=nodejs_api_demo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Documentation
SWAGGER_ENABLED=true

# Docker Configuration
API_PORT=3000
ADMINER_PORT=8080