# Test Environment Configuration Example
# Copy this file to .env.test for testing
NODE_ENV=test
PORT=3001

# Test Database Configuration (use in-memory or test database)
DATABASE_URL="postgresql://testuser:testpass@localhost:5432/nodejs_api_demo_test?schema=public"

# JWT Configuration for testing
JWT_SECRET=test-jwt-secret-for-testing-only
JWT_EXPIRES_IN=1h

# Security Configuration
BCRYPT_ROUNDS=4

# CORS Configuration
CORS_ORIGIN=http://localhost:3001

# API Documentation
SWAGGER_ENABLED=false