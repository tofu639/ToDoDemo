# Docker Environment Configuration Example
# Copy this file to .env for Docker Compose usage

# Application Configuration
NODE_ENV=production
PORT=3000
API_PORT=3000

# Database Configuration
POSTGRES_DB=nodejs_api_demo
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_secure_password_change_me
POSTGRES_PORT=5432

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-docker
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# API Documentation
SWAGGER_ENABLED=true

# Optional: Database Administration
ADMINER_PORT=8080

# Docker Compose Profiles
# Use: docker-compose --profile admin up
# to include the adminer service